{
  "name": "nfl-web-electron",
  "version": "0.0.0",
  "description": "National Farm Life Application",
  "author": "NFL",
  "main": "electron/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "npm run preload:build && electron electron/main.js",
    "electron:dev": "npm run preload:build && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && arch -arm64 npx electron electron/main.js\"",
    "electron:build": "VITE_BUILD_TARGET=electron npm run build && npm run preload:build && npx electron-builder",
    "electron:build:mac": "VITE_BUILD_TARGET=electron npm run build && npm run preload:build && npx electron-builder --mac",
    "electron:build:win": "VITE_BUILD_TARGET=electron npm run build && npm run preload:build && npx electron-builder --win",
    "preload:build": "tsc electron/preload.ts electron/main.ts --outDir electron --target ES2020 --module ESNext --moduleResolution node --esModuleInterop --skipLibCheck",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "firebase:verify": "node scripts/verify-firebase.js",
    "firebase:verify:prod": "node scripts/verify-firebase.js prod",
    "firebase:setup": "node scripts/setup-firebase.js",
    "firebase:setup:prod": "node scripts/setup-firebase.js prod"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.143.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "crypto-js": "^4.2.0",
    "firebase": "^12.7.0",
    "form-data": "^4.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.69.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.2.0",
    "yup": "^1.7.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/router-devtools": "^1.143.6",
    "@tanstack/router-plugin": "^1.143.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "png2icons": "^2.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3"
  }
}
