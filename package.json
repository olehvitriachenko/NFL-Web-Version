{
  "name": "nfl-web-electron",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && tsc -p tsconfig.electron.json",
    "build:exe": "npm run build && electron-builder --win --x64",
    "electron:dev": "tsc -p tsconfig.electron.json && wait-on http://localhost:5173 && electron .",
    "electron": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "electron:start": "electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.143.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "crypto-js": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.69.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.2.0",
    "yup": "^1.7.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tanstack/router-devtools": "^1.143.6",
    "@tanstack/router-plugin": "^1.143.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "wait-on": "^8.0.1",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "concurrently": "^9.1.2"
  }
}
