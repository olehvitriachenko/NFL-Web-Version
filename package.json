{
  "name": "nfl-web-electron",
  "version": "0.0.0",
  "description": "NFL Web Application",
  "author": "NFL",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "npm run preload:build && electron electron/main.js",
    "electron:dev": "npm run preload:build && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "electron:build": "npm run build && npm run preload:build && node build-electron.js",
    "electron:build:sign": "npm run electron:build && npm run sign:exe",
    "sign:exe": "signtool sign /f certificate.pfx /p NFL2024 /t http://timestamp.digicert.com /fd SHA256 \"dist-electron\\win-unpacked\\NFL Web.exe\"",
    "preload:build": "tsc electron/preload.ts electron/main.ts --outDir electron --target ES2020 --module ESNext --moduleResolution node --esModuleInterop --skipLibCheck"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.143.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "crypto-js": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.69.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.2.0",
    "yup": "^1.7.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "@eslint/js": "^9.39.1",
    "@tanstack/router-devtools": "^1.143.6",
    "@tanstack/router-plugin": "^1.143.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.nfl.web",
    "productName": "NFL Web",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "sign": false,
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [],
      "signDlls": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "NFL Web",
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
