{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true
  },
  "include": ["main.ts", "preload.ts"],
  "exclude": ["node_modules"]
}

